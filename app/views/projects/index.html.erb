<%= link_to t(:return).capitalize, dashboard_index_path %>

<h2><%= t(:projects) %></h2>

<%= link_to t(:add_new_date).capitalize, new_project_path %>

<% @projects.each do |project| %>

  <p><%= project.name_project %></p>
  <p><%= project.description_project %></p>
  <p><%= project.link_project %></p>
  <p><%= image_tag(project.img_project) %></p>
  
  <%= link_to(t(:edit).capitalize, edit_project_path(project), id: "project_e_#{project.id}") %>
	<%= link_to(t(:delete).capitalize, project_path(project), id: "project_d_#{project.id}", method: :delete) %>
<% end %>
